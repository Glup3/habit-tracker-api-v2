{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "lib": ["ES2018", "DOM", "ESNext.AsyncIterable"],
    "esModuleInterop": true,
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2018",
    "module": "CommonJS",
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
  }
}
